{
  "private": true,
  "name": "@fullstack-boilerplate/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "watch": "tsnd --respawn --transpile-only --no-notify --ignore-watch node_modules src/index.ts",
    "work": "tsnd --respawn --transpile-only --no-notify --ignore-watch node_modules src/workers.ts",
    "db:migrate": "ts-node node_modules/typeorm/cli.js migration:run -c development",
    "db:create": "ts-node node_modules/typeorm/cli.js migration:create -c development -n",
    "db:generate": "yarn db:migrate && ts-node node_modules/typeorm/cli.js migration:generate -c development -n",
    "db:rollback": "ts-node node_modules/typeorm/cli.js migration:revert -c development",
    "seed:config": "ts-node node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node node_modules/typeorm-seeding/dist/cli.js seed -c development",
    "build": "rimraf dist && tsc --build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix --cache --ext .ts,.tsx src",
    "lint:test": "eslint --cache --ext .ts,.tsx src",
    "prettify": "prettier --write './src/**/*.ts'",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.(js|jsx|json|ts|tsx|html)": [
      "prettier --write"
    ],
    "*.(ts|tsx)": [
      "eslint --fix --cache"
    ]
  },
  "dependencies": {
    "@constemi/itsdangerjs": "0.0.2",
    "@sendgrid/client": "7.6.0",
    "@sendgrid/mail": "7.6.0",
    "@sentry/node": "6.16.1",
    "@sentry/tracing": "6.16.1",
    "@types/lodash": "4.14.178",
    "@types/socket.io": "3.0.2",
    "apollo-server-express": "3.5.0",
    "argon2": "0.28.3",
    "aws-sdk": "2.1040.0",
    "bullmq": "1.57.4",
    "chalk": "4.1.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cross-fetch": "3.1.4",
    "cuid": "2.1.8",
    "dataloader": "2.0.0",
    "dayjs": "1.10.7",
    "dotenv": "10.0.0",
    "eta": "1.12.3",
    "express": "4.17.1",
    "express-jwt": "6.1.0",
    "glob": "7.2.0",
    "graphql": "15.8.0",
    "graphql-depth-limit": "1.1.0",
    "graphql-query-complexity": "0.11.0",
    "handlebars": "4.7.7",
    "helmet": "4.6.0",
    "ioredis": "4.28.2",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.21",
    "morgan": "1.10.0",
    "nodemailer": "6.7.2",
    "pg": "8.7.1",
    "reflect-metadata": "0.1.13",
    "request-ip": "2.1.3",
    "routing-controllers": "0.9.0",
    "socket.io": "4.4.0",
    "type-graphql": "1.1.1",
    "type-graphql-dataloader": "0.5.0",
    "typedi": "0.10.0",
    "typeorm": "0.2.41"
  },
  "devDependencies": {
    "@types/argon2": "0.15.0",
    "@types/express": "4.17.13",
    "@types/express-jwt": "6.0.3",
    "@types/faker": "5.5.9",
    "@types/graphql-depth-limit": "1.1.3",
    "@types/ioredis": "4.28.4",
    "@types/jsonwebtoken": "8.5.6",
    "@types/morgan": "1.9.3",
    "@types/node": "14.18.0",
    "@types/nodemailer": "6.4.4",
    "@types/request-ip": "0.0.37",
    "@types/ws": "7.4.7",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "typeorm-seeding": "1.6.1"
  },
  "workspaces": {
    "nohoist": [
      "typeorm",
      "typeorm/**"
    ]
  }
}
